<%- include("header") -%>
  <div class="box" id="heading">
    <h1><%= tListTitle %> To Do List</h1>
  </div>

<div class="box">
  <% for( tTodo of tTodoList){ %>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%= tTodo._id %>" onChange="this.form.submit()">
        <p> <%= tTodo.name %></p>
      </div>
      <input type="hidden" name="listName" value="<%= tListTitle %>">
    </form>
  <% }%>
  <form class="item" action="/" method="post">
    <input type="text" name="todo" placeholder="New item" autocomplete="off">
    <button type="submit" name="list" value="<%= tListTitle %>">+</button>
  </form>
</div>
<%- include("footer") -%>
